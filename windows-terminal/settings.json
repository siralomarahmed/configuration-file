{
  "$schema": "https://aka.ms/terminal-profiles-schema",

  // "defaultProfile": "{00000000-0000-0000-0000-000000000000}",

  "launchMode": "maximized",
  "initialCols": 148,
  "initialRows": 41,
  "tabWidthMode": "equal",
  "copyFormatting": "none",
  "copyOnSelect": false,

  "actions":
  [
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "ctr+c"
    },
    {
      "command": "paste",
      "keys": "ctr+v"
    },
    {
      "command": "find",
      "keys": "ctr+shift+f"
    },
    {
      "command":
      {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      },
      "keys": "alt+shift+d"
    }
  ],

  "profiles":
  {
    "defaults":
    {
      "bellStyle": "none",
      "historySize": 4096,
      "scrollbarState": "hidden",

      "fontFace": "Cascadia Code",
      "cursorShape": "emptyBox",
      "useAcrylic": false,
      "acrylicOpacity": 0.9,
      "experimental.retroTerminalEffect": false
    }
  },

  "list":
  [
    {
      "name": "PowerShell",
      "tabTitle": "PowerShell",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.PowershellCore"
      // "commandline": ""
    },
    {
      "name": "Windows Subsystem for Linux",
      "tabTitle": "WSL",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.Wsl"
      //"commandline": ""
    },
    {
      "name": "Azure Cloud Shell",
      "tabTitle": "Azure",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.Azure"
      //"commandline": ""
    },
    {
      "name": "Windows PowerShell",
      "tabTitle": "Win PS",

      "hidden": true,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      // "source": "",
      "commandline": "powershell.exe"
    },
    {
      "name": "Command Prompt",
      "tabTitle": "CMD",

      "hidden": true,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      // "source": "",
      "commandline": "cmd.exe"
    }
  ],
  
  "schemes": []
}