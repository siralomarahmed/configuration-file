{
  "$schema": "https://aka.ms/terminal-profiles-schema",

  // "defaultProfile": "{00000000-0000-0000-0000-000000000000}",

  "launchMode": "maximized",
  "initialCols": 148,
  "initialRows": 41,
  "tabWidthMode": "equal",
  "copyFormatting": "none",
  "copyOnSelect": false,

  "actions":
  [
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "ctr+c"
    },
    {
      "command": "paste",
      "keys": "ctr+v"
    },
    {
      "command": "find",
      "keys": "ctr+shift+f"
    },
    {
      "command":
      {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      },
      "keys": "alt+shift+d"
    }
  ],

  "profiles":
  {
    "defaults":
    {
      "bellStyle": "none",
      "historySize": 4096,
      "scrollbarState": "hidden",

      "colorScheme": "MellowCream-Dark",
      "fontFace": "Cascadia Code",
      "cursorShape": "emptyBox",
      "useAcrylic": false,
      "acrylicOpacity": 0.9,
      "experimental.retroTerminalEffect": false
    }
  },

  "list":
  [
    {
      "name": "PowerShell",
      "tabTitle": "PowerShell",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.PowershellCore"
      // "commandline": ""
    },
    {
      "name": "Windows Subsystem for Linux",
      "tabTitle": "WSL",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.Wsl"
      //"commandline": ""
    },
    {
      "name": "Azure Cloud Shell",
      "tabTitle": "Azure",

      "hidden": false,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      "source": "Windows.Terminal.Azure"
      //"commandline": ""
    },
    {
      "name": "Windows PowerShell",
      "tabTitle": "Win PS",

      "hidden": true,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      // "source": "",
      "commandline": "powershell.exe"
    },
    {
      "name": "Command Prompt",
      "tabTitle": "CMD",

      "hidden": true,

      // "guid": "{00000000-0000-0000-0000-000000000000}",
      // "source": "",
      "commandline": "cmd.exe"
    }
  ],
  
  "schemes":
  [
    {
      "name": "MellowCream-Light",

      "cursorColor": "#E57300",
      "selectionBackground": "#6D7980",

      "background": "#FFF2e5",
      "foreground": "#59597F",

      "black": "#262626",
      "brightBlack": "#676767",

      "white": "#7F7F7F",
      "brightWhite": "#727F72",

      "red": "#7F0000",
      "brightRed": "#B20000",

      "green": "#007F00",
      "brightGreen": "#00B200",

      "blue": "#00007F",
      "brightBlue": "#0000B2",

      "yellow": "#E57300",
      "brightYellow": "#FF8C19",

      "cyan": "#007F7F",
      "brightCyan": "#00B2B2",

      "purple": "#400040",
      "brightPurple": "#590059"
    },
    {
      "name": "MellowCream-Dark",

      "cursorColor": "#BFBF40",
      "selectionBackground": "#6D7980",

      "background": "#213131",
      "foreground": "#C0A1A1",

      "black": "#060404",
      "brightBlack": "#875A5A",

      "white": "#C6C3C3",
      "brightWhite": "#DAD8D8",

      "red": "#BF4040",
      "brightRed": "#DB9292",

      "green": "#40BF40",
      "brightGreen": "#84D684",

      "blue": "#4040BF",
      "brightBlue": "#8484D6",

      "yellow": "#BFBF40",
      "brightYellow": "#D6D684",

      "cyan": "#40BFBF",
      "brightCyan": "#84D6D6",

      "purple": "#BF40BF",
      "brightPurple": "#D684D6"
    }
  ]
}